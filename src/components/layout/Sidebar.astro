function isActive(href: string, currentPath: string) {
  if (href === '/') {
    return currentPath === '/';
  }
  return currentPath.startsWith(href);
}
---

<div class="flex flex-col w-64 bg-gray-900 text-white" data-mobile-menu>
  <!-- Logo -->
  <div class="flex items-center justify-center h-16 px-4 bg-gray-800">
    <img src="/logo.png" alt="ComputerPOS Pro" class="h-8 w-auto" />
    <span class="ml-2 text-xl font-bold">ComputerPOS Pro</span>
  </div>

  <!-- Navigation -->
  <nav class="flex-1 px-4 py-6 space-y-2">
    {navigationItems.map((item) => (
      <a
        href={item.href}
        class={`flex items-center px-3 py-2 rounded-md text-sm font-medium transition-colors ${
          isActive(item.href, currentPath)
            ? 'bg-gray-800 text-white'
            : 'text-gray-300 hover:bg-gray-700 hover:text-white'
        }`}
      >
        <svg class="mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={item.icon} />
        </svg>
        {item.name}
      </a>
    ))}
  </nav>

  <!-- Store Info -->
  <div class="px-4 py-4 border-t border-gray-700">
    <div class="text-xs text-gray-400">
      <div class="font-medium">Cửa Hàng PC Pro</div>
      <div>123 Đường ABC, Quận 1, TP.HCM</div>
      <div>Hotline: 0123.456.789</div>
    </div>
  </div>
</div>

<style>
  @media (max-width: 1024px) {
    [data-mobile-menu] {
      position: fixed;
      top: 0;
      left: 0;
      bottom: 0;
      z-index: 40;
      transform: translateX(-100%);
      transition: transform 0.3s ease-in-out;
    }

    [data-mobile-menu]:not(.hidden) {
      transform: translateX(0);
    }
  }
</style>