---
import BaseLayout from '../../layouts/BaseLayout.astro';
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import Card from '../../components/ui/Card.astro';
import Button from '../../components/ui/Button.astro';
---

<BaseLayout title="Báo cáo sản phẩm - ComputerPOS Pro">
  <DashboardLayout>
    <main class="p-6 space-y-6">
      <!-- Header -->
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Báo cáo sản phẩm</h1>
          <p class="text-gray-600 mt-1">Phân tích hiệu suất và xu hướng sản phẩm</p>
        </div>
        <div class="flex space-x-3">
          <Button href="/reports" variant="secondary">Quay lại</Button>
          <Button variant="primary" id="export-product-report">Xuất báo cáo</Button>
        </div>
      </div>

      <!-- Product Summary -->
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <Card>
          <div class="p-6">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-blue-500 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                  </svg>
                </div>
              </div>
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-gray-500 truncate">Sản phẩm bán chạy</dt>
                  <dd class="text-lg font-medium text-gray-900">Intel i7-13700K</dd>
                  <dd class="text-sm text-blue-600">247 đã bán</dd>
                </dl>
              </div>
            </div>
          </div>
        </Card>

        <Card>
          <div class="p-6">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-green-500 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                  </svg>
                </div>
              </div>
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-gray-500 truncate">Doanh thu cao nhất</dt>
                  <dd class="text-lg font-medium text-gray-900">RTX 4090</dd>
                  <dd class="text-sm text-green-600">1.2 tỷ VNĐ</dd>
                </dl>
              </div>
            </div>
          </div>
        </Card>

        <Card>
          <div class="p-6">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-yellow-500 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                  </svg>
                </div>
              </div>
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-gray-500 truncate">Lợi nhuận cao nhất</dt>
                  <dd class="text-lg font-medium text-gray-900">ASUS ROG Strix</dd>
                  <dd class="text-sm text-yellow-600">18.5% margin</dd>
                </dl>
              </div>
            </div>
          </div>
        </Card>

        <Card>
          <div class="p-6">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-red-500 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 17h8m0 0V9m0 8l-8-8-4 4-6-6" />
                  </svg>
                </div>
              </div>
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-gray-500 truncate">Sản phẩm ế ẩm</dt>
                  <dd class="text-lg font-medium text-gray-900">Case Mini ITX</dd>
                  <dd class="text-sm text-red-600">Chỉ 12 đã bán</dd>
                </dl>
              </div>
            </div>
          </div>
        </Card>
      </div>

      <!-- Top Products Table -->
      <Card>
        <div class="overflow-hidden">
          <div class="px-6 py-4 border-b border-gray-200">
            <h3 class="text-lg font-medium text-gray-900">Top sản phẩm bán chạy</h3>
          </div>
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Xếp hạng</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Sản phẩm</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Số lượng bán</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Doanh thu</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Lợi nhuận</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tăng trưởng</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center justify-center w-6 h-6 bg-yellow-100 text-yellow-800 text-sm font-medium rounded-full">1</span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <div class="text-sm font-medium text-gray-900">Intel Core i7-13700K</div>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">247</td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-green-600">2,470,000,000₫</td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-blue-600">370,500,000₫</td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">+25.3%</span>
                  </td>
                </tr>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center justify-center w-6 h-6 bg-gray-100 text-gray-800 text-sm font-medium rounded-full">2</span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <div class="text-sm font-medium text-gray-900">NVIDIA RTX 4070</div>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">189</td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-green-600">3,780,000,000₫</td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-blue-600">567,000,000₫</td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">+18.7%</span>
                  </td>
                </tr>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center justify-center w-6 h-6 bg-orange-100 text-orange-800 text-sm font-medium rounded-full">3</span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <div class="text-sm font-medium text-gray-900">Corsair Vengeance 32GB</div>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">156</td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-green-600">936,000,000₫</td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-blue-600">140,400,000₫</td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">+12.1%</span>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </Card>

      <!-- Product Performance Chart -->
      <Card>
        <div class="p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Hiệu suất sản phẩm theo danh mục</h3>
          <div class="h-80 flex items-center justify-center relative">
            <canvas id="productPerformanceChart"></canvas>
            <div id="productChart-loading" class="absolute inset-0 flex items-center justify-center bg-gray-50 rounded-lg">
              <div class="flex items-center space-x-2 text-gray-600">
                <svg class="animate-spin h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                <span>Đang tải biểu đồ...</span>
              </div>
            </div>
          </div>
        </div>
      </Card>
    </main>
  </DashboardLayout>
</BaseLayout>

<script>
  // Product reports functionality
  document.addEventListener('DOMContentLoaded', function() {
    // Load Chart.js and initialize charts
    import('https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.js').then(module => {
      const Chart = module.default;

      // Product Performance Chart
      const productCtx = document.getElementById('productPerformanceChart');
      if (productCtx) {
        document.getElementById('productChart-loading').style.display = 'none';

        new Chart(productCtx, {
          type: 'bar',
          data: {
            labels: ['CPU', 'VGA', 'RAM', 'Mainboard', 'Ổ cứng', 'Nguồn', 'Case'],
            datasets: [
              {
                label: 'Doanh thu (tỷ VNĐ)',
                data: [2.8, 3.2, 1.5, 1.8, 2.1, 0.9, 0.7],
                backgroundColor: 'rgba(59, 130, 246, 0.8)',
                borderColor: 'rgb(59, 130, 246)',
                borderWidth: 1
              },
              {
                label: 'Lợi nhuận (tỷ VNĐ)',
                data: [0.42, 0.48, 0.23, 0.27, 0.32, 0.14, 0.11],
                backgroundColor: 'rgba(34, 197, 94, 0.8)',
                borderColor: 'rgb(34, 197, 94)',
                borderWidth: 1
              }
            ]
          },
          options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
              legend: {
                position: 'top',
              }
            },
            scales: {
              y: {
                beginAtZero: true
              }
            }
          }
        });
      }
    }).catch(e => console.error('Failed to load Chart.js', e));

    // Export functionality
    const exportBtn = document.getElementById('export-product-report');
    exportBtn?.addEventListener('click', function() {
      alert('Báo cáo sản phẩm đã được xuất thành công!');
    });
  });
</script>