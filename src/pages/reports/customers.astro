---
import BaseLayout from '../../layouts/BaseLayout.astro';
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import Card from '../../components/ui/Card.astro';
import Button from '../../components/ui/Button.astro';
---

<BaseLayout title="Báo cáo khách hàng - ComputerPOS Pro">
  <DashboardLayout>
    <main class="p-6 space-y-6">
      <!-- Header -->
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Báo cáo khách hàng</h1>
          <p class="text-gray-600 mt-1">Phân tích hành vi và xu hướng khách hàng</p>
        </div>
        <div class="flex space-x-3">
          <Button href="/reports" variant="secondary">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m0 7h18" />
            </svg>
            Quay lại
          </Button>
          <Button variant="primary" id="export-customer-report">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            Xuất báo cáo
          </Button>
        </div>
      </div>

      <!-- Summary Cards -->
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <Card>
          <div class="p-6">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-blue-500 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                  </svg>
                </div>
              </div>
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-gray-500 truncate">Tổng khách hàng</dt>
                  <dd class="text-lg font-medium text-gray-900">2,847</dd>
                </dl>
              </div>
            </div>
          </div>
        </Card>

        <Card>
          <div class="p-6">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-green-500 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                </div>
              </div>
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-gray-500 truncate">KH mới tháng này</dt>
                  <dd class="text-lg font-medium text-gray-900">147</dd>
                </dl>
              </div>
            </div>
          </div>
        </Card>

        <Card>
          <div class="p-6">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-yellow-500 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1" />
                  </svg>
                </div>
              </div>
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-gray-500 truncate">Giá trị TB/KH</dt>
                  <dd class="text-lg font-medium text-gray-900">2.8M</dd>
                </dl>
              </div>
            </div>
          </div>
        </Card>

        <Card>
          <div class="p-6">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-purple-500 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                  </svg>
                </div>
              </div>
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-gray-500 truncate">Tỷ lệ quay lại</dt>
                  <dd class="text-lg font-medium text-gray-900">68.5%</dd>
                </dl>
              </div>
            </div>
          </div>
        </Card>
      </div>

      <!-- Customer Segments -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <Card>
          <div class="p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Phân khúc khách hàng</h3>
            <div class="space-y-4">
              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <div class="w-3 h-3 bg-blue-500 rounded-full mr-3"></div>
                  <span class="text-sm font-medium text-gray-900">VIP</span>
                </div>
                <div class="flex items-center space-x-2">
                  <span class="text-sm text-gray-600">247 KH</span>
                  <div class="w-24 bg-gray-200 rounded-full h-2">
                    <div class="bg-blue-500 h-2 rounded-full" style="width: 8.7%"></div>
                  </div>
                  <span class="text-sm font-medium text-gray-900">8.7%</span>
                </div>
              </div>

              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <div class="w-3 h-3 bg-green-500 rounded-full mr-3"></div>
                  <span class="text-sm font-medium text-gray-900">Thường xuyên</span>
                </div>
                <div class="flex items-center space-x-2">
                  <span class="text-sm text-gray-600">892 KH</span>
                  <div class="w-24 bg-gray-200 rounded-full h-2">
                    <div class="bg-green-500 h-2 rounded-full" style="width: 31.3%"></div>
                  </div>
                  <span class="text-sm font-medium text-gray-900">31.3%</span>
                </div>
              </div>

              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <div class="w-3 h-3 bg-yellow-500 rounded-full mr-3"></div>
                  <span class="text-sm font-medium text-gray-900">Bình thường</span>
                </div>
                <div class="flex items-center space-x-2">
                  <span class="text-sm text-gray-600">1,456 KH</span>
                  <div class="w-24 bg-gray-200 rounded-full h-2">
                    <div class="bg-yellow-500 h-2 rounded-full" style="width: 51.1%"></div>
                  </div>
                  <span class="text-sm font-medium text-gray-900">51.1%</span>
                </div>
              </div>

              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <div class="w-3 h-3 bg-red-500 rounded-full mr-3"></div>
                  <span class="text-sm font-medium text-gray-900">Ít hoạt động</span>
                </div>
                <div class="flex items-center space-x-2">
                  <span class="text-sm text-gray-600">252 KH</span>
                  <div class="w-24 bg-gray-200 rounded-full h-2">
                    <div class="bg-red-500 h-2 rounded-full" style="width: 8.9%"></div>
                  </div>
                  <span class="text-sm font-medium text-gray-900">8.9%</span>
                </div>
              </div>
            </div>
          </div>
        </Card>

        <Card>
          <div class="p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Khách hàng mới theo tháng</h3>
            <div class="h-64 flex items-center justify-center relative">
              <canvas id="newCustomersChart"></canvas>
              <div id="newCustomersChart-loading" class="absolute inset-0 flex items-center justify-center bg-gray-50 rounded-lg">
                <div class="flex items-center space-x-2 text-gray-600">
                  <svg class="animate-spin h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                  </svg>
                  <span>Đang tải biểu đồ...</span>
                </div>
              </div>
            </div>
          </div>
        </Card>
      </div>

      <!-- Top Customers Table -->
      <Card>
        <div class="overflow-hidden">
          <div class="px-6 py-4 border-b border-gray-200">
            <h3 class="text-lg font-medium text-gray-900">Top khách hàng VIP</h3>
          </div>
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Khách hàng</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tổng chi tiêu</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Số đơn hàng</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Lần mua cuối</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Phân khúc</th>
                  <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Thao tác</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <div class="flex-shrink-0 h-10 w-10">
                        <div class="h-10 w-10 rounded-full bg-blue-100 flex items-center justify-center">
                          <span class="text-blue-600 font-medium text-sm">NV</span>
                        </div>
                      </div>
                      <div class="ml-4">
                        <div class="text-sm font-medium text-gray-900">Nguyễn Văn A</div>
                        <div class="text-sm text-gray-500">nguyenvana@email.com</div>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-semibold text-gray-900">125,000,000₫</div>
                    <div class="text-sm text-gray-500">47 giao dịch</div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900">47 đơn</div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900">15/12/2024</div>
                    <div class="text-sm text-gray-500">2 ngày trước</div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                      VIP
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <button class="text-indigo-600 hover:text-indigo-900 mr-3">Xem</button>
                    <button class="text-green-600 hover:text-green-900">Liên hệ</button>
                  </td>
                </tr>

                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <div class="flex-shrink-0 h-10 w-10">
                        <div class="h-10 w-10 rounded-full bg-green-100 flex items-center justify-center">
                          <span class="text-green-600 font-medium text-sm">TT</span>
                        </div>
                      </div>
                      <div class="ml-4">
                        <div class="text-sm font-medium text-gray-900">Trần Thị B</div>
                        <div class="text-sm text-gray-500">tranthib@email.com</div>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-semibold text-gray-900">98,500,000₫</div>
                    <div class="text-sm text-gray-500">32 giao dịch</div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900">32 đơn</div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900">12/12/2024</div>
                    <div class="text-sm text-gray-500">5 ngày trước</div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                      Thường xuyên
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <button class="text-indigo-600 hover:text-indigo-900 mr-3">Xem</button>
                    <button class="text-green-600 hover:text-green-900">Liên hệ</button>
                  </td>
                </tr>

                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <div class="flex-shrink-0 h-10 w-10">
                        <div class="h-10 w-10 rounded-full bg-purple-100 flex items-center justify-center">
                          <span class="text-purple-600 font-medium text-sm">LV</span>
                        </div>
                      </div>
                      <div class="ml-4">
                        <div class="text-sm font-medium text-gray-900">Lê Văn C</div>
                        <div class="text-sm text-gray-500">levanc@email.com</div>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-semibold text-gray-900">87,200,000₫</div>
                    <div class="text-sm text-gray-500">28 giao dịch</div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900">28 đơn</div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900">10/12/2024</div>
                    <div class="text-sm text-gray-500">7 ngày trước</div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                      VIP
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <button class="text-indigo-600 hover:text-indigo-900 mr-3">Xem</button>
                    <button class="text-green-600 hover:text-green-900">Liên hệ</button>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </Card>

      <!-- Customer Behavior Analysis -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <Card>
          <div class="p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Hành vi mua hàng</h3>
            <div class="space-y-4">
              <div class="flex justify-between items-center">
                <span class="text-sm text-gray-600">Thời gian mua trung bình</span>
                <span class="text-sm font-medium text-gray-900">Cuối tuần (68%)</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-sm text-gray-600">Giờ mua nhiều nhất</span>
                <span class="text-sm font-medium text-gray-900">14:00 - 18:00</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-sm text-gray-600">Phương thức thanh toán ưa thích</span>
                <span class="text-sm font-medium text-gray-900">Chuyển khoản (45%)</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-sm text-gray-600">Danh mục mua nhiều nhất</span>
                <span class="text-sm font-medium text-gray-900">CPU & VGA</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-sm text-gray-600">Giá trị đơn hàng trung bình</span>
                <span class="text-sm font-medium text-gray-900">2,850,000₫</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-sm text-gray-600">Tần suất mua lại</span>
                <span class="text-sm font-medium text-gray-900">3.2 tháng/lần</span>
              </div>
            </div>
          </div>
        </Card>

        <Card>
          <div class="p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Xu hướng giá trị khách hàng</h3>
            <div class="h-64 flex items-center justify-center relative">
              <canvas id="customerValueChart"></canvas>
              <div id="customerValueChart-loading" class="absolute inset-0 flex items-center justify-center bg-gray-50 rounded-lg">
                <div class="flex items-center space-x-2 text-gray-600">
                  <svg class="animate-spin h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                  </svg>
                  <span>Đang tải biểu đồ...</span>
                </div>
              </div>
            </div>
          </div>
        </Card>
      </div>
    </main>
  </DashboardLayout>
</BaseLayout>

<script>
  // Customer reports functionality
  document.addEventListener('DOMContentLoaded', function() {
    // Load Chart.js and initialize charts
    import('https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.js').then(module => {
      const Chart = module.default;

      // New Customers Chart
      const newCustomersCtx = document.getElementById('newCustomersChart');
      if (newCustomersCtx) {
        // Hide loading indicator
        const loadingElement = document.getElementById('newCustomersChart-loading');
        if (loadingElement) {
          loadingElement.style.display = 'none';
        }

        new Chart(newCustomersCtx, {
          type: 'bar',
          data: {
            labels: ['T1', 'T2', 'T3', 'T4', 'T5', 'T6', 'T7', 'T8', 'T9', 'T10', 'T11', 'T12'],
            datasets: [{
              label: 'Khách hàng mới',
              data: [89, 95, 102, 87, 94, 108, 115, 123, 134, 142, 156, 147],
              backgroundColor: 'rgba(59, 130, 246, 0.8)',
              borderColor: 'rgb(59, 130, 246)',
              borderWidth: 1
            }]
          },
          options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
              legend: {
                display: false
              }
            },
            scales: {
              y: {
                beginAtZero: true,
                title: {
                  display: true,
                  text: 'Số lượng khách hàng'
                }
              },
              x: {
                title: {
                  display: true,
                  text: 'Tháng'
                }
              }
            }
          }
        });
      }

      // Customer Value Chart
      const customerValueCtx = document.getElementById('customerValueChart');
      if (customerValueCtx) {
        // Hide loading indicator
        const valueLoadingElement = document.getElementById('customerValueChart-loading');
        if (valueLoadingElement) {
          valueLoadingElement.style.display = 'none';
        }

        new Chart(customerValueCtx, {
          type: 'line',
          data: {
            labels: ['T1', 'T2', 'T3', 'T4', 'T5', 'T6', 'T7', 'T8', 'T9', 'T10', 'T11', 'T12'],
            datasets: [
              {
                label: 'Giá trị trung bình/KH',
                data: [2.1, 2.3, 2.5, 2.4, 2.6, 2.8, 2.9, 3.1, 3.0, 2.9, 2.8, 2.8],
                borderColor: 'rgb(34, 197, 94)',
                backgroundColor: 'rgba(34, 197, 94, 0.1)',
                tension: 0.4,
                fill: true
              },
              {
                label: 'Tần suất mua hàng',
                data: [1.8, 1.9, 2.1, 2.0, 2.2, 2.4, 2.5, 2.7, 2.6, 2.5, 2.4, 2.3],
                borderColor: 'rgb(168, 85, 247)',
                backgroundColor: 'rgba(168, 85, 247, 0.1)',
                tension: 0.4,
                fill: false
              }
            ]
          },
          options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
              legend: {
                position: 'top',
              }
            },
            scales: {
              y: {
                beginAtZero: true,
                title: {
                  display: true,
                  text: 'Giá trị (triệu VNĐ)'
                }
              },
              x: {
                title: {
                  display: true,
                  text: 'Tháng'
                }
              }
            }
          }
        });
      }
    }).catch(e => console.error('Failed to load Chart.js', e));

    // Export functionality
    const exportBtn = document.getElementById('export-customer-report');
    exportBtn?.addEventListener('click', function() {
      // Simulate export
      const originalText = exportBtn.innerHTML;
      exportBtn.innerHTML = `
        <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        Đang xuất...
      `;

      setTimeout(() => {
