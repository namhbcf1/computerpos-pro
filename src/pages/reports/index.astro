---
import BaseLayout from '../../layouts/BaseLayout.astro';
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import Card from '../../components/ui/Card.astro';
import Button from '../../components/ui/Button.astro';
---

<BaseLayout title="Báo cáo - ComputerPOS Pro">
  <DashboardLayout>
    <main class="p-6 space-y-6">
      <!-- Header -->
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Báo cáo</h1>
          <p class="text-gray-600 mt-1">Phân tích dữ liệu kinh doanh và hiệu suất bán hàng</p>
        </div>
        <div class="flex space-x-3">
          <Button variant="secondary">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            Xuất báo cáo
          </Button>
          <Button href="/reports/custom" variant="primary">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
            Tạo báo cáo tùy chỉnh
          </Button>
        </div>
      </div>

      <!-- Quick Stats -->
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <Card>
          <div class="p-6">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-green-500 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1" />
                  </svg>
                </div>
              </div>
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-gray-500 truncate">Doanh thu tháng</dt>
                  <dd class="text-lg font-medium text-gray-900">2.4 tỷ₫</dd>
                </dl>
              </div>
            </div>
          </div>
        </Card>

        <Card>
          <div class="p-6">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-blue-500 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                  </svg>
                </div>
              </div>
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-gray-500 truncate">Đơn hàng</dt>
                  <dd class="text-lg font-medium text-gray-900">1,247</dd>
                </dl>
              </div>
            </div>
          </div>
        </Card>

        <Card>
          <div class="p-6">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-purple-500 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                  </svg>
                </div>
              </div>
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-gray-500 truncate">Khách hàng mới</dt>
                  <dd class="text-lg font-medium text-gray-900">89</dd>
                </dl>
              </div>
            </div>
          </div>
        </Card>

        <Card>
          <div class="p-6">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-orange-500 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                  </svg>
                </div>
              </div>
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-gray-500 truncate">Tăng trưởng</dt>
                  <dd class="text-lg font-medium text-gray-900">+12.5%</dd>
                </dl>
              </div>
            </div>
          </div>
        </Card>
      </div>

      <!-- Report Categories -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Sales Reports -->
        <Card>
          <div class="p-6">
            <div class="flex items-center mb-4">
              <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                </svg>
              </div>
              <h3 class="ml-3 text-lg font-medium text-gray-900">Báo cáo bán hàng</h3>
            </div>
            <p class="text-gray-600 mb-4">Phân tích doanh thu, lợi nhuận và hiệu suất bán hàng</p>
            <div class="space-y-2">
              <Button href="/reports/sales" variant="outline" size="sm" class="w-full justify-start">
                Doanh thu theo thời gian
              </Button>
              <Button href="/reports/sales" variant="outline" size="sm" class="w-full justify-start">
                Top sản phẩm bán chạy
              </Button>
              <Button href="/reports/sales" variant="outline" size="sm" class="w-full justify-start">
                Hiệu suất nhân viên
              </Button>
            </div>
          </div>
        </Card>

        <!-- Inventory Reports -->
        <Card>
          <div class="p-6">
            <div class="flex items-center mb-4">
              <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                </svg>
              </div>
              <h3 class="ml-3 text-lg font-medium text-gray-900">Báo cáo tồn kho</h3>
            </div>
            <p class="text-gray-600 mb-4">Theo dõi tình trạng tồn kho và xuất nhập hàng</p>
            <div class="space-y-2">
              <Button href="/reports/inventory" variant="outline" size="sm" class="w-full justify-start">
                Tình trạng tồn kho
              </Button>
              <Button href="/reports/inventory" variant="outline" size="sm" class="w-full justify-start">
                Xuất nhập kho
              </Button>
              <Button href="/reports/inventory" variant="outline" size="sm" class="w-full justify-start">
                Hàng sắp hết
              </Button>
            </div>
          </div>
        </Card>

        <!-- Customer Reports -->
        <Card>
          <div class="p-6">
            <div class="flex items-center mb-4">
              <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
              </div>
              <h3 class="ml-3 text-lg font-medium text-gray-900">Báo cáo khách hàng</h3>
            </div>
            <p class="text-gray-600 mb-4">Phân tích hành vi và giá trị khách hàng</p>
            <div class="space-y-2">
              <Button href="/reports/customers" variant="outline" size="sm" class="w-full justify-start">
                Khách hàng VIP
              </Button>
              <Button href="/reports/customers" variant="outline" size="sm" class="w-full justify-start">
                Lịch sử mua hàng
              </Button>
              <Button href="/reports/customers" variant="outline" size="sm" class="w-full justify-start">
                Phân khúc khách hàng
              </Button>
            </div>
          </div>
        </Card>

        <!-- Financial Reports -->
        <Card>
          <div class="p-6">
            <div class="flex items-center mb-4">
              <div class="w-10 h-10 bg-yellow-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1" />
                </svg>
              </div>
              <h3 class="ml-3 text-lg font-medium text-gray-900">Báo cáo tài chính</h3>
            </div>
            <p class="text-gray-600 mb-4">Phân tích tài chính và lợi nhuận kinh doanh</p>
            <div class="space-y-2">
              <Button href="/reports/financial" variant="outline" size="sm" class="w-full justify-start">
                Báo cáo lãi lỗ
              </Button>
              <Button href="/reports/financial" variant="outline" size="sm" class="w-full justify-start">
                Dòng tiền
              </Button>
              <Button href="/reports/financial" variant="outline" size="sm" class="w-full justify-start">
                Chi phí vận hành
              </Button>
            </div>
          </div>
        </Card>

        <!-- Product Reports -->
        <Card>
          <div class="p-6">
            <div class="flex items-center mb-4">
              <div class="w-10 h-10 bg-red-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" />
                </svg>
              </div>
              <h3 class="ml-3 text-lg font-medium text-gray-900">Báo cáo sản phẩm</h3>
            </div>
            <p class="text-gray-600 mb-4">Phân tích hiệu suất và xu hướng sản phẩm</p>
            <div class="space-y-2">
              <Button href="/reports/products" variant="outline" size="sm" class="w-full justify-start">
                Sản phẩm bán chạy
              </Button>
              <Button href="/reports/products" variant="outline" size="sm" class="w-full justify-start">
                Lợi nhuận theo sản phẩm
              </Button>
              <Button href="/reports/products" variant="outline" size="sm" class="w-full justify-start">
                Xu hướng thị trường
              </Button>
            </div>
          </div>
        </Card>

        <!-- Brand Reports -->
        <Card>
          <div class="p-6">
            <div class="flex items-center mb-4">
              <div class="w-10 h-10 bg-indigo-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                </svg>
              </div>
              <h3 class="ml-3 text-lg font-medium text-gray-900">Báo cáo thương hiệu</h3>
            </div>
            <p class="text-gray-600 mb-4">Phân tích hiệu suất theo thương hiệu</p>
            <div class="space-y-2">
              <Button href="/reports/brands" variant="outline" size="sm" class="w-full justify-start">
                Doanh thu theo brand
              </Button>
              <Button href="/reports/brands" variant="outline" size="sm" class="w-full justify-start">
                So sánh thương hiệu
              </Button>
              <Button href="/reports/brands" variant="outline" size="sm" class="w-full justify-start">
                Xu hướng brand
              </Button>
            </div>
          </div>
        </Card>
      </div>
    </main>
  </DashboardLayout>
</BaseLayout>