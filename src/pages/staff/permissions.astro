---
import BaseLayout from '../../layouts/BaseLayout.astro';
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import Card from '../../components/ui/Card.astro';
import Button from '../../components/ui/Button.astro';
---

<BaseLayout title="Phân quyền nhân viên - ComputerPOS Pro">
  <DashboardLayout>
    <main class="p-6 space-y-6">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Phân quyền nhân viên</h1>
          <p class="text-gray-600 mt-1">Quản lý quyền truy cập của từng nhân viên</p>
        </div>
        <div class="flex space-x-3">
          <Button href="/staff" variant="secondary">Quay lại</Button>
          <Button variant="primary" id="save-permissions">Lưu phân quyền</Button>
        </div>
      </div>

      <!-- Staff List with Permissions -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <Card>
          <div class="p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Danh sách nhân viên</h3>
            <div class="space-y-3">
              <div class="flex items-center p-3 border border-gray-200 rounded-lg cursor-pointer hover:bg-gray-50" onclick="selectStaff('staff1')">
                <div class="flex-shrink-0 h-10 w-10">
                  <div class="h-10 w-10 rounded-full bg-blue-100 flex items-center justify-center">
                    <span class="text-blue-600 font-medium text-sm">NV</span>
                  </div>
                </div>
                <div class="ml-4 flex-1">
                  <div class="text-sm font-medium text-gray-900">Nguyễn Văn A</div>
                  <div class="text-sm text-gray-500">Nhân viên bán hàng</div>
                </div>
                <div class="text-sm text-blue-600">Quản lý</div>
              </div>

              <div class="flex items-center p-3 border border-gray-200 rounded-lg cursor-pointer hover:bg-gray-50" onclick="selectStaff('staff2')">
                <div class="flex-shrink-0 h-10 w-10">
                  <div class="h-10 w-10 rounded-full bg-green-100 flex items-center justify-center">
                    <span class="text-green-600 font-medium text-sm">TT</span>
                  </div>
                </div>
                <div class="ml-4 flex-1">
                  <div class="text-sm font-medium text-gray-900">Trần Thị B</div>
                  <div class="text-sm text-gray-500">Nhân viên kho</div>
                </div>
                <div class="text-sm text-gray-600">Nhân viên</div>
              </div>

              <div class="flex items-center p-3 border border-gray-200 rounded-lg cursor-pointer hover:bg-gray-50" onclick="selectStaff('staff3')">
                <div class="flex-shrink-0 h-10 w-10">
                  <div class="h-10 w-10 rounded-full bg-purple-100 flex items-center justify-center">
                    <span class="text-purple-600 font-medium text-sm">LV</span>
                  </div>
                </div>
                <div class="ml-4 flex-1">
                  <div class="text-sm font-medium text-gray-900">Lê Văn C</div>
                  <div class="text-sm text-gray-500">Nhân viên thu ngân</div>
                </div>
                <div class="text-sm text-gray-600">Nhân viên</div>
              </div>
            </div>
          </div>
        </Card>

        <Card>
          <div class="p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Phân quyền chi tiết</h3>
            <div id="permission-details" class="space-y-4">
              <div class="text-center text-gray-500 py-8">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                </svg>
                <p class="mt-2 text-sm">Chọn nhân viên để xem phân quyền</p>
              </div>
            </div>
          </div>
        </Card>
      </div>

      <!-- Permission Matrix -->
      <Card>
        <div class="overflow-hidden">
          <div class="px-6 py-4 border-b border-gray-200">
            <h3 class="text-lg font-medium text-gray-900">Ma trận phân quyền</h3>
          </div>
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Chức năng</th>
                  <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Nguyễn Văn A</th>
                  <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Trần Thị B</th>
                  <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Lê Văn C</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">Bán hàng POS</td>
                  <td class="px-6 py-4 whitespace-nowrap text-center">
                    <svg class="w-5 h-5 text-green-500 mx-auto" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                    </svg>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-center">
                    <svg class="w-5 h-5 text-red-500 mx-auto" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-center">
                    <svg class="w-5 h-5 text-green-500 mx-auto" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                    </svg>
                  </td>
                </tr>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">Quản lý sản phẩm</td>
                  <td class="px-6 py-4 whitespace-nowrap text-center">
                    <svg class="w-5 h-5 text-green-500 mx-auto" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                    </svg>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-center">
                    <svg class="w-5 h-5 text-green-500 mx-auto" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                    </svg>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-center">
                    <svg class="w-5 h-5 text-red-500 mx-auto" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                  </td>
                </tr>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">Xem báo cáo</td>
                  <td class="px-6 py-4 whitespace-nowrap text-center">
                    <svg class="w-5 h-5 text-green-500 mx-auto" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                    </svg>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-center">
                    <svg class="w-5 h-5 text-red-500 mx-auto" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-center">
                    <svg class="w-5 h-5 text-red-500 mx-auto" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </Card>
    </main>
  </DashboardLayout>
</BaseLayout>

<script>
  // Permissions functionality
  document.addEventListener('DOMContentLoaded', function() {
    // Staff permissions data
    const staffPermissions = {
      staff1: {
        name: 'Nguyễn Văn A',
        role: 'Quản lý',
        permissions: [
          { name: 'Bán hàng POS', granted: true },
          { name: 'Quản lý sản phẩm', granted: true },
          { name: 'Quản lý kho', granted: true },
          { name: 'Xem báo cáo', granted: true },
          { name: 'Quản lý khách hàng', granted: true },
          { name: 'Cài đặt hệ thống', granted: false }
        ]
      },
      staff2: {
        name: 'Trần Thị B',
        role: 'Nhân viên kho',
        permissions: [
          { name: 'Bán hàng POS', granted: false },
          { name: 'Quản lý sản phẩm', granted: true },
          { name: 'Quản lý kho', granted: true },
          { name: 'Xem báo cáo', granted: false },
          { name: 'Quản lý khách hàng', granted: false },
          { name: 'Cài đặt hệ thống', granted: false }
        ]
      },
      staff3: {
        name: 'Lê Văn C',
        role: 'Nhân viên thu ngân',
        permissions: [
          { name: 'Bán hàng POS', granted: true },
          { name: 'Quản lý sản phẩm', granted: false },
          { name: 'Quản lý kho', granted: false },
          { name: 'Xem báo cáo', granted: false },
          { name: 'Quản lý khách hàng', granted: true },
          { name: 'Cài đặt hệ thống', granted: false }
        ]
      }
    };

    // Select staff function
    window.selectStaff = function(staffId) {
      const staff = staffPermissions[staffId];
      const detailsContainer = document.getElementById('permission-details');

      if (staff) {
        detailsContainer.innerHTML = `
          <div class="mb-4">
            <h4 class="text-lg font-medium text-gray-900">${staff.name}</h4>
            <p class="text-sm text-gray-600">${staff.role}</p>
          </div>
          <div class="space-y-3">
            ${staff.permissions.map(permission => `
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-700">${permission.name}</span>
                <label class="relative inline-flex items-center cursor-pointer">
                  <input type="checkbox" class="sr-only peer" ${permission.granted ? 'checked' : ''}>
                  <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"></div>
                </label>
              </div>
            `).join('')}
          </div>
        `;
      }
    };

    // Save permissions
    const saveBtn = document.getElementById('save-permissions');
    saveBtn?.addEventListener('click', function() {
      alert('Phân quyền đã được lưu thành công!');
    });
  });
</script>