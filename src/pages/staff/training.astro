---
import BaseLayout from '../../layouts/BaseLayout.astro';
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import Card from '../../components/ui/Card.astro';
import Button from '../../components/ui/Button.astro';
---

<BaseLayout title="Đào tạo nhân viên - ComputerPOS Pro">
  <DashboardLayout>
    <main class="p-6 space-y-6">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Đào tạo nhân viên</h1>
          <p class="text-gray-600 mt-1">Quản lý chương trình đào tạo và phát triển nhân viên</p>
        </div>
        <div class="flex space-x-3">
          <Button href="/staff" variant="secondary">Quay lại</Button>
          <Button variant="primary" id="add-training">Thêm khóa học</Button>
        </div>
      </div>

      <!-- Training Overview -->
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <Card>
          <div class="p-6">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-blue-500 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                  </svg>
                </div>
              </div>
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-gray-500 truncate">Tổng khóa học</dt>
                  <dd class="text-lg font-medium text-gray-900">12</dd>
                  <dd class="text-sm text-blue-600">Đang hoạt động</dd>
                </dl>
              </div>
            </div>
          </div>
        </Card>

        <Card>
          <div class="p-6">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-green-500 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
              </div>
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-gray-500 truncate">Hoàn thành</dt>
                  <dd class="text-lg font-medium text-gray-900">89%</dd>
                  <dd class="text-sm text-green-600">Tỷ lệ trung bình</dd>
                </dl>
              </div>
            </div>
          </div>
        </Card>

        <Card>
          <div class="p-6">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-yellow-500 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
              </div>
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-gray-500 truncate">Đang học</dt>
                  <dd class="text-lg font-medium text-gray-900">24</dd>
                  <dd class="text-sm text-yellow-600">Nhân viên</dd>
                </dl>
              </div>
            </div>
          </div>
        </Card>

        <Card>
          <div class="p-6">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-purple-500 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                  </svg>
                </div>
              </div>
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-gray-500 truncate">Chứng chỉ</dt>
                  <dd class="text-lg font-medium text-gray-900">47</dd>
                  <dd class="text-sm text-purple-600">Đã cấp</dd>
                </dl>
              </div>
            </div>
          </div>
        </Card>
      </div>

      <!-- Training Courses -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <Card>
          <div class="p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Khóa học đang diễn ra</h3>
            <div class="space-y-4">
              <div class="border border-gray-200 rounded-lg p-4">
                <div class="flex items-center justify-between mb-2">
                  <h4 class="text-sm font-medium text-gray-900">Kỹ năng bán hàng cơ bản</h4>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                    Đang diễn ra
                  </span>
                </div>
                <p class="text-sm text-gray-600 mb-3">Học cách tiếp cận và tư vấn khách hàng hiệu quả</p>
                <div class="flex items-center justify-between">
                  <div class="flex items-center text-sm text-gray-500">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                    12 học viên
                  </div>
                  <div class="flex items-center">
                    <div class="flex-1 bg-gray-200 rounded-full h-2 mr-2 w-20">
                      <div class="bg-blue-600 h-2 rounded-full" style="width: 65%"></div>
                    </div>
                    <span class="text-sm text-gray-600">65%</span>
                  </div>
                </div>
              </div>

              <div class="border border-gray-200 rounded-lg p-4">
                <div class="flex items-center justify-between mb-2">
                  <h4 class="text-sm font-medium text-gray-900">Sử dụng hệ thống POS</h4>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    Sắp kết thúc
                  </span>
                </div>
                <p class="text-sm text-gray-600 mb-3">Hướng dẫn sử dụng hệ thống bán hàng ComputerPOS</p>
                <div class="flex items-center justify-between">
                  <div class="flex items-center text-sm text-gray-500">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                    8 học viên
                  </div>
                  <div class="flex items-center">
                    <div class="flex-1 bg-gray-200 rounded-full h-2 mr-2 w-20">
                      <div class="bg-green-600 h-2 rounded-full" style="width: 90%"></div>
                    </div>
                    <span class="text-sm text-gray-600">90%</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </Card>

        <Card>
          <div class="p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Tiến độ học tập</h3>
            <div class="space-y-4">
              <div class="flex items-center">
                <div class="flex-shrink-0 h-10 w-10">
                  <div class="h-10 w-10 rounded-full bg-blue-100 flex items-center justify-center">
                    <span class="text-blue-600 font-medium text-sm">NV</span>
                  </div>
                </div>
                <div class="ml-4 flex-1">
                  <div class="flex items-center justify-between">
                    <div>
                      <div class="text-sm font-medium text-gray-900">Nguyễn Văn A</div>
                      <div class="text-sm text-gray-500">3/4 khóa học hoàn thành</div>
                    </div>
                    <div class="flex items-center">
                      <div class="flex-1 bg-gray-200 rounded-full h-2 mr-2 w-20">
                        <div class="bg-green-600 h-2 rounded-full" style="width: 75%"></div>
                      </div>
                      <span class="text-sm text-gray-600">75%</span>
                    </div>
                  </div>
                </div>
              </div>

              <div class="flex items-center">
                <div class="flex-shrink-0 h-10 w-10">
                  <div class="h-10 w-10 rounded-full bg-green-100 flex items-center justify-center">
                    <span class="text-green-600 font-medium text-sm">TT</span>
                  </div>
                </div>
                <div class="ml-4 flex-1">
                  <div class="flex items-center justify-between">
                    <div>
                      <div class="text-sm font-medium text-gray-900">Trần Thị B</div>
                      <div class="text-sm text-gray-500">2/3 khóa học hoàn thành</div>
                    </div>
                    <div class="flex items-center">
                      <div class="flex-1 bg-gray-200 rounded-full h-2 mr-2 w-20">
                        <div class="bg-blue-600 h-2 rounded-full" style="width: 67%"></div>
                      </div>
                      <span class="text-sm text-gray-600">67%</span>
                    </div>
                  </div>
                </div>
              </div>

              <div class="flex items-center">
                <div class="flex-shrink-0 h-10 w-10">
                  <div class="h-10 w-10 rounded-full bg-purple-100 flex items-center justify-center">
                    <span class="text-purple-600 font-medium text-sm">LV</span>
                  </div>
                </div>
                <div class="ml-4 flex-1">
                  <div class="flex items-center justify-between">
                    <div>
                      <div class="text-sm font-medium text-gray-900">Lê Văn C</div>
                      <div class="text-sm text-gray-500">1/2 khóa học hoàn thành</div>
                    </div>
                    <div class="flex items-center">
                      <div class="flex-1 bg-gray-200 rounded-full h-2 mr-2 w-20">
                        <div class="bg-yellow-600 h-2 rounded-full" style="width: 50%"></div>
                      </div>
                      <span class="text-sm text-gray-600">50%</span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </Card>
      </div>

      <!-- Training Calendar -->
      <Card>
        <div class="p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Lịch đào tạo tháng này</h3>
          <div class="grid grid-cols-7 gap-1 text-center text-sm">
            <div class="font-medium text-gray-900 py-2">CN</div>
            <div class="font-medium text-gray-900 py-2">T2</div>
            <div class="font-medium text-gray-900 py-2">T3</div>
            <div class="font-medium text-gray-900 py-2">T4</div>
            <div class="font-medium text-gray-900 py-2">T5</div>
            <div class="font-medium text-gray-900 py-2">T6</div>
            <div class="font-medium text-gray-900 py-2">T7</div>

            <!-- Calendar days -->
            <div class="py-2 text-gray-400">29</div>
            <div class="py-2 text-gray-400">30</div>
            <div class="py-2">1</div>
            <div class="py-2">2</div>
            <div class="py-2">3</div>
            <div class="py-2">4</div>
            <div class="py-2">5</div>

            <div class="py-2">6</div>
            <div class="py-2">7</div>
            <div class="py-2">8</div>
            <div class="py-2">9</div>
            <div class="py-2">10</div>
            <div class="py-2">11</div>
            <div class="py-2">12</div>

            <div class="py-2">13</div>
            <div class="py-2">14</div>
            <div class="py-2 bg-blue-100 text-blue-800 rounded">15</div>
            <div class="py-2">16</div>
            <div class="py-2">17</div>
            <div class="py-2">18</div>
            <div class="py-2">19</div>

            <div class="py-2">20</div>
            <div class="py-2">21</div>
            <div class="py-2 bg-green-100 text-green-800 rounded">22</div>
            <div class="py-2">23</div>
            <div class="py-2">24</div>
            <div class="py-2">25</div>
            <div class="py-2">26</div>

            <div class="py-2">27</div>
            <div class="py-2">28</div>
            <div class="py-2">29</div>
            <div class="py-2">30</div>
            <div class="py-2">31</div>
            <div class="py-2 text-gray-400">1</div>
            <div class="py-2 text-gray-400">2</div>
          </div>

          <div class="mt-4 flex items-center space-x-4 text-sm">
            <div class="flex items-center">
              <div class="w-3 h-3 bg-blue-100 rounded mr-2"></div>
              <span class="text-gray-600">Khóa học mới</span>
            </div>
            <div class="flex items-center">
              <div class="w-3 h-3 bg-green-100 rounded mr-2"></div>
              <span class="text-gray-600">Thi kết thúc</span>
            </div>
          </div>
        </div>
      </Card>
    </main>
  </DashboardLayout>
</BaseLayout>

<script>
  // Training functionality
  document.addEventListener('DOMContentLoaded', function() {
    // Add training
    const addTrainingBtn = document.getElementById('add-training');
    addTrainingBtn?.addEventListener('click', function() {
      alert('Chức năng thêm khóa học sẽ được phát triển trong phiên bản tiếp theo');
    });
  });
</script>