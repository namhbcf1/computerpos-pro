---
import BaseLayout from '../../layouts/BaseLayout.astro';
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import Card from '../../components/ui/Card.astro';
import Button from '../../components/ui/Button.astro';
---

<BaseLayout title="Quản lý vai trò - ComputerPOS Pro">
  <DashboardLayout>
    <main class="p-6 space-y-6">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Quản lý vai trò</h1>
          <p class="text-gray-600 mt-1">Quản lý vai trò và quyền hạn người dùng</p>
        </div>
        <Button href="/settings" variant="secondary">Quay lại</Button>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <Card>
          <div class="p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Super Admin</h3>
            <p class="text-sm text-gray-600 mb-4">Toàn quyền truy cập hệ thống</p>
            <div class="space-y-2">
              <div class="flex items-center text-sm text-green-600">
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                Tất cả quyền
              </div>
            </div>
          </div>
        </Card>

        <Card>
          <div class="p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Quản lý</h3>
            <p class="text-sm text-gray-600 mb-4">Quản lý cửa hàng và nhân viên</p>
            <div class="space-y-2">
              <div class="flex items-center text-sm text-green-600">
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                Quản lý sản phẩm
              </div>
              <div class="flex items-center text-sm text-green-600">
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                Xem báo cáo
              </div>
            </div>
          </div>
        </Card>

        <Card>
          <div class="p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Nhân viên</h3>
            <p class="text-sm text-gray-600 mb-4">Bán hàng và quản lý đơn hàng</p>
            <div class="space-y-2">
              <div class="flex items-center text-sm text-green-600">
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                Bán hàng POS
              </div>
              <div class="flex items-center text-sm text-green-600">
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                Xem sản phẩm
              </div>
            </div>
          </div>
        </Card>
      </div>
    </main>
  </DashboardLayout>
</BaseLayout>