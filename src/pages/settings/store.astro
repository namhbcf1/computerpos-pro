---
import BaseLayout from '../../layouts/BaseLayout.astro';
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import Card from '../../components/ui/Card.astro';
import Button from '../../components/ui/Button.astro';
---

<BaseLayout title="Cài đặt cửa hàng - ComputerPOS Pro">
  <DashboardLayout>
    <main class="p-6 space-y-6">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Cài đặt cửa hàng</h1>
          <p class="text-gray-600 mt-1">Quản lý thông tin và cài đặt cửa hàng</p>
        </div>
        <div class="flex space-x-3">
          <Button href="/settings" variant="secondary">Quay lại</Button>
          <Button variant="primary" id="save-store-settings">Lưu cài đặt</Button>
        </div>
      </div>

      <Card>
        <div class="p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Thông tin cửa hàng</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Tên cửa hàng</label>
              <input type="text" value="ComputerPOS Pro Store" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Số điện thoại</label>
              <input type="tel" value="0901234567" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
            </div>
            <div class="md:col-span-2">
              <label class="block text-sm font-medium text-gray-700 mb-2">Địa chỉ</label>
              <textarea rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">123 Đường ABC, Phường XYZ, Quận 1, TP.HCM</textarea>
            </div>
          </div>
        </div>
      </Card>

      <Card>
        <div class="p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Cài đặt hoạt động</h3>
          <div class="space-y-4">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm font-medium text-gray-900">Giờ mở cửa</p>
                <p class="text-sm text-gray-600">Thời gian hoạt động của cửa hàng</p>
              </div>
              <div class="flex space-x-2">
                <input type="time" value="08:00" class="px-3 py-2 border border-gray-300 rounded-lg" />
                <span class="py-2">-</span>
                <input type="time" value="22:00" class="px-3 py-2 border border-gray-300 rounded-lg" />
              </div>
            </div>
          </div>
        </div>
      </Card>
    </main>
  </DashboardLayout>
</BaseLayout>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const saveBtn = document.getElementById('save-store-settings');
    saveBtn?.addEventListener('click', function() {
      alert('Cài đặt cửa hàng đã được lưu thành công!');
    });
  });
</script>