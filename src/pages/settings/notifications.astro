---
import BaseLayout from '../../layouts/BaseLayout.astro';
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import Card from '../../components/ui/Card.astro';
import Button from '../../components/ui/Button.astro';
---

<BaseLayout title="Cài đặt thông báo - ComputerPOS Pro">
  <DashboardLayout>
    <main class="p-6 space-y-6">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Cài đặt thông báo</h1>
          <p class="text-gray-600 mt-1">Quản lý thông báo và cảnh báo hệ thống</p>
        </div>
        <Button href="/settings" variant="secondary">Quay lại</Button>
      </div>

      <Card>
        <div class="p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Thông báo email</h3>
          <div class="space-y-4">
            <label class="flex items-center justify-between">
              <span class="text-sm text-gray-700">Thông báo đơn hàng mới</span>
              <input type="checkbox" class="rounded border-gray-300 text-blue-600 focus:ring-blue-500" checked>
            </label>
            <label class="flex items-center justify-between">
              <span class="text-sm text-gray-700">Cảnh báo tồn kho thấp</span>
              <input type="checkbox" class="rounded border-gray-300 text-blue-600 focus:ring-blue-500" checked>
            </label>
            <label class="flex items-center justify-between">
              <span class="text-sm text-gray-700">Báo cáo doanh thu hàng ngày</span>
              <input type="checkbox" class="rounded border-gray-300 text-blue-600 focus:ring-blue-500">
            </label>
          </div>
        </div>
      </Card>
    </main>
  </DashboardLayout>
</BaseLayout>