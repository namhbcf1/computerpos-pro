---
import BaseLayout from '../../layouts/BaseLayout.astro';
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import Card from '../../components/ui/Card.astro';
import Button from '../../components/ui/Button.astro';
---

<BaseLayout title="Thông số kỹ thuật - ComputerPOS Pro">
  <DashboardLayout>
    <main class="p-6 space-y-6">
      <!-- Header -->
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Thông số kỹ thuật</h1>
          <p class="text-gray-600 mt-1">Quản lý thông số kỹ thuật của sản phẩm</p>
        </div>
        <div class="flex space-x-3">
          <Button href="/products" variant="secondary">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m0 7h18" />
            </svg>
            Quay lại
          </Button>
          <Button variant="primary" id="add-spec">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
            Thêm thông số
          </Button>
        </div>
      </div>

      <!-- Specs Categories -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- CPU Specs -->
        <Card>
          <div class="p-6">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-semibold text-gray-900">CPU</h3>
              <span class="text-sm text-gray-500">12 thông số</span>
            </div>
            <div class="space-y-3">
              <div class="flex justify-between">
                <span class="text-gray-600">Socket</span>
                <span class="font-medium">LGA1700, AM5, AM4</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">Cores</span>
                <span class="font-medium">4-24 cores</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">Base Clock</span>
                <span class="font-medium">2.0-4.0 GHz</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">TDP</span>
                <span class="font-medium">65-125W</span>
              </div>
            </div>
            <div class="mt-4 pt-4 border-t border-gray-200">
              <Button variant="outline" size="sm" fullWidth>Chỉnh sửa</Button>
            </div>
          </div>
        </Card>

        <!-- VGA Specs -->
        <Card>
          <div class="p-6">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-semibold text-gray-900">VGA</h3>
              <span class="text-sm text-gray-500">15 thông số</span>
            </div>
            <div class="space-y-3">
              <div class="flex justify-between">
                <span class="text-gray-600">Memory</span>
                <span class="font-medium">4-24 GB</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">Memory Type</span>
                <span class="font-medium">GDDR6, GDDR6X</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">Interface</span>
                <span class="font-medium">PCIe 4.0 x16</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">Power</span>
                <span class="font-medium">150-450W</span>
              </div>
            </div>
            <div class="mt-4 pt-4 border-t border-gray-200">
              <Button variant="outline" size="sm" fullWidth>Chỉnh sửa</Button>
            </div>
          </div>
        </Card>

        <!-- RAM Specs -->
        <Card>
          <div class="p-6">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-semibold text-gray-900">RAM</h3>
              <span class="text-sm text-gray-500">8 thông số</span>
            </div>
            <div class="space-y-3">
              <div class="flex justify-between">
                <span class="text-gray-600">Type</span>
                <span class="font-medium">DDR4, DDR5</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">Capacity</span>
                <span class="font-medium">8-128 GB</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">Speed</span>
                <span class="font-medium">2400-6400 MHz</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">Latency</span>
                <span class="font-medium">CL14-CL40</span>
              </div>
            </div>
            <div class="mt-4 pt-4 border-t border-gray-200">
              <Button variant="outline" size="sm" fullWidth>Chỉnh sửa</Button>
            </div>
          </div>
        </Card>
      </div>
    </main>
  </DashboardLayout>
</BaseLayout>

<script>
  // Specs page functionality
  document.addEventListener('DOMContentLoaded', function() {
    // Add spec button
    document.getElementById('add-spec')?.addEventListener('click', function() {
      const specName = prompt('Nhập tên thông số mới:');
      if (specName) {
        alert(`Đã thêm thông số: ${specName}`);
      }
    });
  });
</script>