---
import BaseLayout from '../../layouts/BaseLayout.astro';
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import Card from '../../components/ui/Card.astro';
import Button from '../../components/ui/Button.astro';
---

<BaseLayout title="Danh mục sản phẩm - ComputerPOS Pro">
  <DashboardLayout>
    <main class="p-6 space-y-6">
      <!-- Header -->
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Danh mục sản phẩm</h1>
          <p class="text-gray-600 mt-1">Quản lý các danh mục linh kiện máy tính</p>
        </div>
        <div class="flex space-x-3">
          <Button href="/products" variant="secondary">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m0 7h18" />
            </svg>
            Quay lại
          </Button>
          <Button variant="primary" id="add-category">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
            Thêm danh mục
          </Button>
        </div>
      </div>

      <!-- Categories Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        <!-- CPU Category -->
        <Card hover class="p-6">
          <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 bg-blue-500 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" />
              </svg>
            </div>
            <div class="flex space-x-2">
              <button class="text-gray-400 hover:text-gray-600">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
              </button>
              <button class="text-red-400 hover:text-red-600">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
              </button>
            </div>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">CPU</h3>
          <p class="text-gray-600 text-sm mb-4">Bộ vi xử lý Intel, AMD</p>
          <div class="flex justify-between items-center">
            <span class="text-2xl font-bold text-blue-600">156</span>
            <span class="text-sm text-gray-500">sản phẩm</span>
          </div>
        </Card>

        <!-- VGA Category -->
        <Card hover class="p-6">
          <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 bg-green-500 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <div class="flex space-x-2">
              <button class="text-gray-400 hover:text-gray-600">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
              </button>
              <button class="text-red-400 hover:text-red-600">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
              </button>
            </div>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">VGA</h3>
          <p class="text-gray-600 text-sm mb-4">Card đồ họa NVIDIA, AMD</p>
          <div class="flex justify-between items-center">
            <span class="text-2xl font-bold text-green-600">89</span>
            <span class="text-sm text-gray-500">sản phẩm</span>
          </div>
        </Card>

        <!-- RAM Category -->
        <Card hover class="p-6">
          <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 bg-purple-500 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
              </svg>
            </div>
            <div class="flex space-x-2">
              <button class="text-gray-400 hover:text-gray-600">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
              </button>
              <button class="text-red-400 hover:text-red-600">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
              </button>
            </div>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">RAM</h3>
          <p class="text-gray-600 text-sm mb-4">Bộ nhớ DDR4, DDR5</p>
          <div class="flex justify-between items-center">
            <span class="text-2xl font-bold text-purple-600">124</span>
            <span class="text-sm text-gray-500">sản phẩm</span>
          </div>
        </Card>

        <!-- Mainboard Category -->
        <Card hover class="p-6">
          <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 bg-orange-500 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" />
              </svg>
            </div>
            <div class="flex space-x-2">
              <button class="text-gray-400 hover:text-gray-600">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
              </button>
              <button class="text-red-400 hover:text-red-600">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
              </button>
            </div>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Mainboard</h3>
          <p class="text-gray-600 text-sm mb-4">Bo mạch chủ Intel, AMD</p>
          <div class="flex justify-between items-center">
            <span class="text-2xl font-bold text-orange-600">67</span>
            <span class="text-sm text-gray-500">sản phẩm</span>
          </div>
        </Card>

        <!-- Storage Category -->
        <Card hover class="p-6">
          <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 bg-indigo-500 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01" />
              </svg>
            </div>
            <div class="flex space-x-2">
              <button class="text-gray-400 hover:text-gray-600">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
              </button>
              <button class="text-red-400 hover:text-red-600">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
              </button>
            </div>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Ổ cứng</h3>
          <p class="text-gray-600 text-sm mb-4">SSD, HDD, NVMe</p>
          <div class="flex justify-between items-center">
            <span class="text-2xl font-bold text-indigo-600">203</span>
            <span class="text-sm text-gray-500">sản phẩm</span>
          </div>
        </Card>

        <!-- Add New Category Card -->
        <Card hover class="p-6 border-2 border-dashed border-gray-300 bg-gray-50">
          <div class="text-center">
            <div class="w-12 h-12 bg-gray-300 rounded-lg flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-700 mb-2">Thêm danh mục mới</h3>
            <p class="text-gray-500 text-sm">Tạo danh mục sản phẩm mới</p>
          </div>
        </Card>
      </div>
    </main>
  </DashboardLayout>
</BaseLayout>

<script>
  // Categories page functionality
  document.addEventListener('DOMContentLoaded', function() {
    // Add category button
    document.getElementById('add-category')?.addEventListener('click', function() {
      const categoryName = prompt('Nhập tên danh mục mới:');
      if (categoryName) {
        alert(`Đã thêm danh mục: ${categoryName}`);
        // In real app, this would make API call
      }
    });

    // Edit category buttons
    document.addEventListener('click', function(e) {
      if (e.target.closest('button')?.querySelector('path[d*="M11 5H6"]')) {
        const card = e.target.closest('.p-6');
        const categoryName = card.querySelector('h3').textContent;
        const newName = prompt(`Chỉnh sửa tên danh mục:`, categoryName);
        if (newName && newName !== categoryName) {
          card.querySelector('h3').textContent = newName;
          alert('Đã cập nhật tên danh mục!');
        }
      }

      // Delete category buttons
      if (e.target.closest('button')?.querySelector('path[d*="M19 7l"]')) {
        const card = e.target.closest('.p-6');
        const categoryName = card.querySelector('h3').textContent;
        if (confirm(`Bạn có chắc muốn xóa danh mục "${categoryName}"?\nTất cả sản phẩm trong danh mục này sẽ bị ảnh hưởng.`)) {
          card.style.opacity = '0.5';
          setTimeout(() => {
            card.remove();
            alert('Đã xóa danh mục!');
          }, 500);
        }
      }
    });

    // Add new category card click
    document.querySelector('.border-dashed')?.addEventListener('click', function() {
      document.getElementById('add-category')?.click();
    });
  });
</script>