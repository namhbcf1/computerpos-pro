---

<script>
// Redirect to order detail page with proper ID handling
if (typeof window !== 'undefined') {
  const orderId = new URLSearchParams(window.location.search).get('id') || window.location.pathname.split('/').pop();
  if (orderId && orderId !== '[id]') {
    window.location.href = `/orders/index.html?id=${orderId}`;
  } else {
    window.location.href = '/orders/';
  }
}
</script>

