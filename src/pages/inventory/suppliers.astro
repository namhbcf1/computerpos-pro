  window.saveSupplier = function() {
    const id = document.getElementById('supplier-id').value;
    const code = document.getElementById('supplier-code').value;
    const name = document.getElementById('supplier-name').value;
    const contactPerson = document.getElementById('contact-person').value;
    const contactPosition = document.getElementById('contact-position').value;
    const email = document.getElementById('supplier-email').value;
    const phone = document.getElementById('supplier-phone').value;
    const website = document.getElementById('supplier-website').value;
    const fax = document.getElementById('supplier-fax').value;
    const address = document.getElementById('supplier-address').value;
    const taxCode = document.getElementById('tax-code').value;
    const primaryCategory = document.getElementById('primary-category').value;
    const paymentTerms = document.getElementById('payment-terms').value;
    const status = document.getElementById('supplier-status').value;
    const notes = document.getElementById('supplier-notes').value;

    if (!name || !email || !phone) {
      alert('Vui lòng điền đầy đủ thông tin bắt buộc!');
      return;
    }

    // Email validation
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    if (!emailRegex.test(email)) {
      alert('Email không hợp lệ!');
      return;
    }

    // Phone validation
    const phoneRegex = /^[0-9]{10,11}$/;
    if (!phoneRegex.test(phone.replace(/[\s-]/g, ''))) {
      alert('Số điện thoại không hợp lệ!');
      return;
    }

    if (id) {
      // Update existing supplier
      const supplier = suppliers.find(s => s.id === id);
      if (supplier) {
        supplier.code = code;
        supplier.name = name;
        supplier.contactPerson = contactPerson;
        supplier.contactPosition = contactPosition;
        supplier.email = email;
        supplier.phone = phone;
        supplier.website = website;
        supplier.fax = fax;
        supplier.address = address;
        supplier.taxCode = taxCode;
        supplier.primaryCategory = primaryCategory;
        supplier.paymentTerms = paymentTerms;
        supplier.status = status;
        supplier.notes = notes;
      }
    } else {
      // Create new supplier
      const newSupplier = {
        id: 'sup_' + Date.now(),
        code,
        name,
        contactPerson,
        contactPosition,
        email,
        phone,
        website,
        fax,
        address,
        taxCode,
        primaryCategory,
        paymentTerms,
        status,
        rating: 0,
        totalOrders: 0,
        totalValue: 0,
        notes,
        createdAt: new Date().toISOString(),
        lastOrderDate: null
      };
      suppliers.unshift(newSupplier);
    }

    saveData();
    closeModal('supplier-modal');
    renderSuppliers();
    alert(id ? 'Đã cập nhật thông tin nhà cung cấp!' : 'Đã thêm nhà cung cấp mới!');
  };

