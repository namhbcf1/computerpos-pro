  function generateSupplierCSV(data) {
    const headers = ['Mã NCC', 'Tên công ty', 'Người liên hệ', 'Email', 'Điện thoại', 'Chuyên môn', 'Trạng thái', 'Đánh giá', 'Tổng đơn', 'Tổng giá trị'];
    
