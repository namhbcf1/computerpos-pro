    const totalValue = filtered.reduce((sum, s) => sum + s.totalValue, 0);

    document.getElementById('total-suppliers').textContent = totalSuppliers;
    document.getElementById('active-suppliers').textContent = activeSuppliers;
    document.getElementById('monthly-orders').textContent = totalOrders;
    document.getElementById('total-value').textContent = formatVND(totalValue);
  }

