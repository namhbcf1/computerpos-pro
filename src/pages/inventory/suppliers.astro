                </div>
                <div>
                  <label class="form-label">Loại sản phẩm chính</label>
                  <select class="form-select" id="primary-category">
                    <option value="">Chọn loại sản phẩm...</option>
                    <option value="cpu">CPU & Processor</option>
                    <option value="gpu">Card đồ họa</option>
                    <option value="ram">RAM & Memory</option>
                    <option value="storage">Ổ cứng & SSD</option>
                    <option value="motherboard">Mainboard</option>
                    <option value="psu">Nguồn máy tính</option>
                    <option value="cooling">Tản nhiệt</option>
                    <option value="case">Case & Vỏ máy</option>
                    <option value="peripherals">Phụ kiện</option>
                  </select>
                </div>
                <div>
                  <label class="form-label">Phương thức thanh toán</label>
                  <select class="form-select" id="payment-terms">
                    <option value="cod">Thanh toán khi nhận hàng</option>
                    <option value="30">Chuyển khoản 30 ngày</option>
                    <option value="15">Chuyển khoản 15 ngày</option>
                    <option value="7">Chuyển khoản 7 ngày</option>
                    <option value="0">Thanh toán ngay</option>
                  </select>
                </div>
              </div>
            </div>

            <!-- Additional Information -->
            <div>
              <h4 class="text-md font-medium text-gray-900 mb-4">Thông tin bổ sung</h4>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <label class="form-label">Ghi chú</label>
                  <textarea class="form-textarea" id="supplier-notes" rows="3" placeholder="Ghi chú về nhà cung cấp..."></textarea>
                </div>
                <div>
                  <label class="form-label">Trạng thái</label>
                  <select class="form-select" id="supplier-status">
                    <option value="active">Đang hoạt động</option>
                    <option value="inactive">Tạm ngừng</option>
                    <option value="pending">Chờ duyệt</option>
                    <option value="blocked">Bị khóa</option>
                  </select>
                </div>
              </div>
            </div>

            <input type="hidden" id="supplier-id">
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" onclick="closeModal('supplier-modal')">Hủy</button>
          <button type="button" class="btn btn-primary" onclick="saveSupplier()">Lưu thông tin</button>
        </div>
      </div>
    </div>

    <!-- View Supplier Detail Modal -->
    <div id="supplier-detail-modal" class="modal-overlay hidden">
      <div class="modal-content max-w-5xl">
        <div class="modal-header">
          <h3 class="modal-title" id="supplier-detail-title">Chi tiết nhà cung cấp</h3>
          <button class="modal-close" onclick="closeModal('supplier-detail-modal')">&times;</button>
        </div>
        <div class="modal-body">
          <div id="supplier-detail-content">
            <!-- Supplier details will be populated here -->
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" onclick="closeModal('supplier-detail-modal')">Đóng</button>
          <button type="button" class="btn btn-primary" id="edit-supplier-btn">Chỉnh sửa</button>
        </div>
      </div>
    </div>
  </DashboardLayout>
</BaseLayout>

