      supplier.email,
      supplier.phone,
      categoryNames[supplier.primaryCategory] || supplier.primaryCategory,
      statusNames[supplier.status],
      supplier.rating,
      supplier.totalOrders,
      supplier.totalValue
    ]);

    return [headers, ...rows].map(row => 
      row.map(field => `"${field}"`).join(',')
    ).join('\n');
