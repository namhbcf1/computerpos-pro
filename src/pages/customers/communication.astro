  function renderTemplates() {
    const container = document.getElementById('templates-grid');

    if (templates.length === 0) {
      container.innerHTML = `
        <div class="col-span-full text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">Chưa có mẫu tin nhắn nào</h3>
          <p class="mt-1 text-sm text-gray-500">Tạo mẫu tin nhắn để sử dụng lại cho các chiến dịch.</p>
          <div class="mt-6">
            <button onclick="createNewTemplate()" class="btn btn-primary">Tạo mẫu mới</button>
          </div>
        </div>
      `;
      return;
    }

    let html = '';
    templates.forEach(template => {
      const typeColors = {
        email: 'bg-blue-100 text-blue-800',
        sms: 'bg-green-100 text-green-800'
      };

      html += `
        <div class="bg-white border border-gray-200 rounded-lg p-6 hover:shadow-md transition-shadow">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-medium text-gray-900">${template.name}</h3>
            <span class="px-2 py-1 text-xs font-medium rounded-full ${typeColors[template.type]}">${template.type.toUpperCase()}</span>
          </div>
          ${template.subject ? `<p class="text-sm text-gray-600 mb-2">${template.subject}</p>` : ''}
          <p class="text-sm text-gray-500 mb-4 line-clamp-3">${template.content.substring(0, 100)}...</p>
          <div class="flex items-center justify-between">
            <span class="text-xs text-gray-400">${getCategoryName(template.category)}</span>
            <div class="flex space-x-2">
              <button onclick="useTemplate('${template.id}')" class="text-blue-600 hover:text-blue-800 text-sm">Sử dụng</button>
              <button onclick="editTemplate('${template.id}')" class="text-gray-400 hover:text-gray-600 text-sm">Sửa</button>
              <button onclick="deleteTemplate('${template.id}')" class="text-red-400 hover:text-red-600 text-sm">Xóa</button>
            </div>
          </div>
        </div>
      `;
    });

    container.innerHTML = html;
  }

  function renderHistory() {
    const container = document.getElementById('history-list');
    
    if (communicationHistory.length === 0) {
      container.innerHTML = `
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
