            <button onclick="createNewAutomation()" class="btn btn-primary">Tạo tự động hóa</button>
          </div>
        </div>
      `;
      return;
    }

    // Render automation rules here
  }

  function getAudienceName(audience) {
    const names = {
      all: 'Tất cả',
      vip: 'VIP',
      new: 'Khách mới',
      inactive: 'Không hoạt động',
      segment: 'Phân khúc'
    };
    return names[audience] || audience;
  }

  function getCategoryName(category) {
    const names = {
      birthday: 'Sinh nhật',
      promotion: 'Khuyến mãi',
      welcome: 'Chào mừng',
      reminder: 'Nhắc nhở',
      'thank-you': 'Cảm ơn'
    };
    return names[category] || category;
  }

  // Modal functions
  window.createNewCampaign = function() {
    document.getElementById('campaign-modal').classList.remove('hidden');
  };

  window.createNewTemplate = function() {
    document.getElementById('template-modal').classList.remove('hidden');
  };

  window.createNewAutomation = function() {
    populateAutomationTemplates();
    document.getElementById('automation-modal').classList.remove('hidden');
  };

  function populateAutomationTemplates() {
    const select = document.getElementById('automation-template');
    select.innerHTML = '<option value="">Chọn mẫu tin nhắn...</option>';
    
    templates.forEach(template => {
      const option = document.createElement('option');
      option.value = template.id;
      option.textContent = `${template.name} (${template.type.toUpperCase()})`;
      select.appendChild(option);
    });
  }

  window.saveCampaign = function() {
    const name = document.getElementById('campaign-name').value;
    const type = document.getElementById('campaign-type').value;
    const audience = document.getElementById('campaign-audience').value;
    const subject = document.getElementById('campaign-subject').value;
    const content = document.getElementById('campaign-content').value;
    const schedule = document.getElementById('campaign-schedule').value;
    const scheduleTime = document.getElementById('campaign-schedule-time').value;

    if (!name || !subject || !content) {
      alert('Vui lòng điền đầy đủ thông tin bắt buộc!');
      return;
    }

    const campaign = {
      id: 'camp_' + Date.now(),
      name,
      type,
      audience,
      subject,
      content,
      schedule,
      scheduleTime,
      status: schedule === 'now' ? 'active' : 'scheduled',
      createdAt: new Date().toISOString(),
      stats: {
        sent: 0,
        delivered: 0,
        opened: 0,
        clicked: 0
      }
    };

    campaigns.push(campaign);
    saveData();
    closeModal('campaign-modal');
    renderCampaigns();
    updateStats();
    alert('Đã tạo chiến dịch thành công!');
  };

  window.saveTemplate = function() {
    const name = document.getElementById('template-name').value;
    const type = document.getElementById('template-type').value;
    const subject = document.getElementById('template-subject').value;
    const content = document.getElementById('template-content').value;
    const category = document.getElementById('template-category').value;

    if (!name || !content) {
      alert('Vui lòng điền đầy đủ thông tin bắt buộc!');
      return;
    }

    const template = {
      id: 'tpl_' + Date.now(),
      name,
      type,
      subject,
      content,
      category,
      createdAt: new Date().toISOString()
    };

    templates.push(template);
    saveData();
    closeModal('template-modal');
    renderTemplates();
    alert('Đã lưu mẫu tin nhắn thành công!');
  };

  window.saveAutomation = function() {
    const name = document.getElementById('automation-name').value;
    const trigger = document.getElementById('automation-trigger').value;
    const timing = document.getElementById('automation-timing').value;
    const templateId = document.getElementById('automation-template').value;
    const status = document.getElementById('automation-status').value;

    if (!name || !templateId) {
      alert('Vui lòng điền đầy đủ thông tin bắt buộc!');
      return;
    }

    const automation = {
      id: 'auto_' + Date.now(),
      name,
      trigger,
      timing,
      templateId,
      status,
      createdAt: new Date().toISOString(),
      stats: {
        triggered: 0,
        sent: 0
      }
    };

    automations.push(automation);
    saveData();
    closeModal('automation-modal');
    renderAutomation();
    alert('Đã tạo tự động hóa thành công!');
  };

  window.closeModal = function(modalId) {
    document.getElementById(modalId).classList.add('hidden');
  };

  function updateStats() {
    // Calculate stats from campaigns and history
    const totalEmails = campaigns.filter(c => c.type === 'email' || c.type === 'both').length;
    const totalSms = campaigns.filter(c => c.type === 'sms' || c.type === 'both').length;
    const activeCampaigns = campaigns.filter(c => c.status === 'active').length;

    document.getElementById('emails-sent').textContent = totalEmails * 100; // Simulated
    document.getElementById('sms-sent').textContent = totalSms * 50; // Simulated
    document.getElementById('email-open-rate').textContent = '24.5%'; // Simulated
    document.getElementById('active-campaigns').textContent = activeCampaigns;
  }

  // Event listeners
  document.getElementById('campaign-filter').addEventListener('change', renderCampaigns);
  document.getElementById('campaign-schedule').addEventListener('change', function() {
    const container = document.getElementById('schedule-time-container');
    if (this.value === 'scheduled') {
      container.classList.remove('hidden');
    } else {
      container.classList.add('hidden');
    }
  });

  // Initialize
  loadData();
  renderCampaigns();
  updateStats();
});
</script>

