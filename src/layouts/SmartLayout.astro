---
import BaseLayout from './BaseLayout.astro';
import SmartHeader from '../components/layout/SmartHeader.astro';
import SmartSidebar from '../components/layout/SmartSidebar.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<BaseLayout title={title}>
  <div class="smart-app">
    <SmartHeader />
    <div class="smart-layout">
      <SmartSidebar />
      <main class="smart-main">
        <slot />
      </main>
    </div>
  </div>
</BaseLayout>

<style>
  .smart-app {
    min-height: 100vh;
    background: var(--gray-50);
  }
  
  .smart-layout {
    display: flex;
    position: relative;
  }
</style>