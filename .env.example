# Cloudflare Configuration
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token

# Database Configuration (Cloudflare D1)
DATABASE_ID=your-d1-database-id
DATABASE_NAME=computerpos_db

# Application Configuration
APP_NAME=ComputerPOS Pro
APP_URL=https://your-domain.pages.dev
APP_ENV=development

# API Configuration
API_BASE_URL=https://your-workers-domain.workers.dev
API_VERSION=v1

# Security
JWT_SECRET=your-jwt-secret-key
ENCRYPTION_KEY=your-encryption-key

# Features
ENABLE_BARCODE_SCANNER=true
ENABLE_RECEIPT_PRINTER=true
ENABLE_CUSTOMER_DISPLAY=true

# Vietnamese Localization
DEFAULT_CURRENCY=VND
DEFAULT_LANGUAGE=vi
TIMEZONE=Asia/Ho_Chi_Minh

# Development
DEBUG=false
LOG_LEVEL=info
