{
  "name": "pos-frontend",
  "version": "1.0.0",
  "description": "Frontend cho hệ thống POS với Cloudflare Pages",
  "private": true,
  "dependencies": {
    "@ant-design/icons": "^5.2.6",
    "@hookform/resolvers": "^3.3.2",
    "@tanstack/react-query": "^5.8.4",
    "antd": "^5.12.8",
    "axios": "^1.6.2",
    "class-variance-authority": "^0.7.0",
    "dayjs": "^1.11.10",
    "framer-motion": "^10.16.16",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "react-router-dom": "^6.20.1",
    "react-scripts": "5.0.1",
    "react-toastify": "^9.1.3",
    "recharts": "^2.8.0",
    "tailwindcss": "^3.3.6",
    "web-vitals": "^2.1.4",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "deploy": "npm run build && wrangler pages deploy build --project-name=pos-frontend",
    "deploy:preview": "npm run build && wrangler pages deploy build --project-name=pos-frontend --branch=preview",
    "lint": "eslint src --ext .js,.jsx",
    "lint:fix": "eslint src --ext .js,.jsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,css,md}\"",
    "analyze": "npm run build && npx webpack-bundle-analyzer build/static/js/*.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    "wrangler": "^3.22.0"
  },
  "proxy": "http://localhost:3001",
  "homepage": "https://pos-frontend.pages.dev"
}
